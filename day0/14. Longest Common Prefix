// malloc, must free( 現在是因爲main 不是我自己寫的, 但是用malloc mem is using heap
// so must free(prefix) in main)


char* longestCommonPrefix(char** strs, int strsSize){
    // define return type, 
    int len = strlen(strs[0]);
    char *prefix = (char*)malloc((len+1) * sizeof(char) );

    // doubel for loop
    for(int i = 0; i<len; i++){

        char temp = strs[0][i];

        for(int j = 1; j<strsSize; j++){
            if(temp == '\0' || temp != strs[j][i]){
                prefix[i] = '\0';
                return prefix;
            }
            
        }
        prefix[i] = temp;
    }

    prefix[len] = '\0';
    return prefix;

}
